{
	"compilerOptions": {
		"strict": false,
		"target": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "dist",
		"jsx": "react",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"lib": ["DOM", "ESNext"]
	},
	"exclude": ["dist", "node_modules", "**/*.test.*"]
}
