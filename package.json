{
	"workspaces": [
		"packages/**"
	],
	"name": "gsl_document-validation-ui",
	"version": "1.0.0",
	"description": "Blueprint architecture front application",
	"repository": "https://github.com/axel-springer-kugawana/gsl_document-validation-ui.git",
	"license": "MIT",
	"private": true,
	"scripts": {
		"dev:resume": "yarn workspace @local/resume dev",
		"dev:all:resume": "concurrently -n resume \"yarn dev:resume\"",
		"dev": "concurrently -n resume \"yarn dev:resume\"",
		"prod:resume": "yarn workspace @local/resume start",
		"build:resume": "yarn workspace @local/resume build",
		"build:resume:analyze": "yarn workspace @local/resume build:analyze",
		"build:all": "lerna run build",
		"export:resume": "yarn workspace @local/resume export",
		"lint": "yarn run eslint ./",
		"lint:css": "stylelint ./**/*.tsx",
		"test": "lerna run test --stream -- --detectOpenHandles",
		"test:watch": "lerna run test --stream -- --watch --detectOpenHandles",
		"test:coverage": "lerna run test --stream -- --collectCoverage"
	},
	"devDependencies": {
		"@babel/cli": "^7.17.6",
		"@babel/core": "^7.17.5",
		"@babel/plugin-proposal-optional-chaining": "^7.16.7",
		"@babel/plugin-transform-named-capturing-groups-regex": "^7.16.8",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-typescript": "^7.16.7",
		"@types/events": "^3.0.0",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.19",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"babel-jest": "^27.5.1",
		"babel-loader": "^8.2.3",
		"babel-preset-minify": "^0.5.1",
		"concurrently": "^7.0.0",
		"dotenv": "^16.0.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-plugin-import": "^2.25.4",
		"jest": "^27.5.1",
		"jest-styled-components": "^7.0.8",
		"lerna": "^3.22.1",
		"mq-polyfill": "^1.1.8",
		"node-notifier": "^10.0.1",
		"npm-run-all": "4.1.5",
		"redux-devtools-extension": "^2.13.8",
		"rimraf": "^3.0.2",
		"stylelint": "^14.5.2",
		"stylelint-config-property-sort-order-smacss": "^9.0.0",
		"stylelint-config-recommended": "^3.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-processor-styled-components": "^1.10.0",
		"typescript": "^4.5.5",
		"@testing-library/dom": "^8.11.3",
		"@testing-library/jest-dom": "^5.16.2",
		"@testing-library/react": "^12.1.3",
		"@testing-library/react-hooks": "7.0.2"
	},
	"dependencies": {
		"jest-location-mock": "^1.0.9",
		"launchdarkly-node-server-sdk": "^6.4.0"
	}
}
